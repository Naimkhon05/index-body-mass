    <table>
      <thead>
        <tr>
          <td>Body mass index</td>
          <td>Correspondence between a person's mass and his height</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>15 and less</td>
          <td>Expression underweight</td>
        </tr>
        <tr>
          <td>16-18,4</td>
          <td>Insufficient body mass</td>
        </tr>
        <tr>
          <td>18,5-24</td>
          <td>Norm</td>
        </tr>
        <tr>
          <td>25-29</td>
          <td>Overweight</td>
        </tr>
        <tr>
          <td>30-34</td>
          <td>First degree obesity</td>
        </tr>
        <tr>
          <td>35-39</td>
          <td>Second degree obesity</td>
        </tr>
        <tr>
          <td>40 or more</td>
          <td>Third degree obesity</td>
        </tr>
      </tbody>
